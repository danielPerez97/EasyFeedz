<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ButtonCardView"
    android:id="@+id/list_entry_cardview"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:cardElevation="6dp"
    >
    <LinearLayout
        android:id="@+id/list_entry_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:padding="8dp"
        >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >
        <ImageView
            android:id="@+id/feed_twitter_user_photo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_account_circle_blue_24dp"/>
        <TextView
            android:id="@+id/feed_twitter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="22dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            />
        <TextView
            android:id="@+id/feed_twitter_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@Johndoe"
            android:textSize="18dp"

            />

        </LinearLayout>
        <TextView
            android:id="@+id/feed_twitter_tweet_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

