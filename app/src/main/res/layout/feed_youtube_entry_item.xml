<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_entry_cardview"
    style="@style/ButtonCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:backgroundTint="#D32222"
    android:orientation="vertical"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:id="@+id/list_entry_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/feed_youtube_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_video_label_white_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/feed_youtube_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="#fff"
                android:textSize="16dp" />

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:src="@drawable/youtube" />
            </LinearLayout>
                <TextView
                    android:id="@+id/feed_youtube_channel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@Johndoe"
                    android:textColor="#fff"
                    android:textSize="14dp"

                    />

        <TextView
            android:id="@+id/feed_youtube_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
            android:textColor="#fff" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

